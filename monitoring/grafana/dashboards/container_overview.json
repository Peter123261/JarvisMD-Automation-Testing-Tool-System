{
  "id": null,
  "uid": "container-overview",
  "title": "Container Overview (cAdvisor)",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "Container CPU Usage (%)",
      "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "sum by (id) (rate(container_cpu_usage_seconds_total[5m])) * 100",
          "legendFormat": "{{id}}"
        }
      ],
      "fieldConfig": {
        "defaults": {"unit": "percent"},
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Container Memory Usage",
      "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "max by (id) (container_memory_usage_bytes)",
          "legendFormat": "{{id}}"
        }
      ],
      "fieldConfig": {
        "defaults": {"unit": "bytes"},
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Container Network I/O",
      "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "sum by (id) (rate(container_network_receive_bytes_total[5m]))",
          "legendFormat": "{{id}} RX"
        },
        {
          "expr": "sum by (id) (rate(container_network_transmit_bytes_total[5m]))",
          "legendFormat": "{{id}} TX"
        }
      ],
      "fieldConfig": {
        "defaults": {"unit": "Bps"},
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Container Disk I/O",
      "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "sum by (id) (rate(container_fs_reads_bytes_total[5m]))",
          "legendFormat": "{{id}} read"
        },
        {
          "expr": "sum by (id) (rate(container_fs_writes_bytes_total[5m]))",
          "legendFormat": "{{id}} write"
        }
      ],
      "fieldConfig": {
        "defaults": {"unit": "Bps"},
        "overrides": []
      }
    },
    {
      "type": "table",
      "title": "Containers Snapshot",
      "gridPos": {"x": 0, "y": 16, "w": 24, "h": 8},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "label_replace(rate(container_cpu_usage_seconds_total[5m]) * 100, \"metric\", \"cpu\", \"id\", \"$1\")"
        },
        {
          "expr": "label_replace(container_memory_usage_bytes, \"metric\", \"memory\", \"id\", \"$1\")"
        }
      ],
      "transformations": [
        {
          "id": "labelsToFields",
          "options": {}
        },
        {
          "id": "organize",
          "options": {
            "excludeByName": {},
            "indexByName": {},
            "renameByName": {
              "Value": "value",
              "metric": "metric",
              "id": "container"
            }
          }
        }
      ],
      "options": {
        "showHeader": true
      },
      "fieldConfig": {
        "defaults": {},
        "overrides": []
      }
    }
  ],
  "templating": {"list": []}
}

