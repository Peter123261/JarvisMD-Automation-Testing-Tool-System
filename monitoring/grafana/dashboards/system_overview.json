{
  "id": null,
  "uid": "system-overview",
  "title": "System Overview (Node Exporter)",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "type": "stat",
      "title": "CPU Utilization",
      "gridPos": {"x": 0, "y": 0, "w": 8, "h": 4},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "100 - (avg(rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "percentage",
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 90}
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Memory Utilization",
      "gridPos": {"x": 8, "y": 0, "w": 8, "h": 4},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "(1 - avg(node_memory_MemAvailable_bytes) / avg(node_memory_MemTotal_bytes)) * 100",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "percentage",
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 70},
              {"color": "red", "value": 90}
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "stat",
      "title": "Disk Utilization",
      "gridPos": {"x": 16, "y": 0, "w": 8, "h": 4},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "max((node_filesystem_size_bytes{fstype!~\"tmpfs|aufs|overlay\"} - node_filesystem_free_bytes{fstype!~\"tmpfs|aufs|overlay\"}) / node_filesystem_size_bytes{fstype!~\"tmpfs|aufs|overlay\"} * 100)",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "percentage",
            "steps": [
              {"color": "green", "value": 0},
              {"color": "yellow", "value": 75},
              {"color": "red", "value": 90}
            ]
          }
        },
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "CPU Utilization (5m avg)",
      "gridPos": {"x": 0, "y": 4, "w": 12, "h": 8},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "100 - (avg by(instance)(rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "{{instance}}"
        }
      ],
      "fieldConfig": {
        "defaults": {"unit": "percent"},
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Memory Utilization",
      "gridPos": {"x": 12, "y": 4, "w": 12, "h": 8},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "(1 - node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes) * 100",
          "legendFormat": "{{instance}}"
        }
      ],
      "fieldConfig": {
        "defaults": {"unit": "percent"},
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Disk Space Usage",
      "gridPos": {"x": 0, "y": 12, "w": 12, "h": 8},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "node_filesystem_size_bytes{fstype!~\"tmpfs|aufs|overlay\"} - node_filesystem_free_bytes{fstype!~\"tmpfs|aufs|overlay\"}",
          "legendFormat": "{{mountpoint}} used"
        }
      ],
      "fieldConfig": {
        "defaults": {"unit": "bytes"},
        "overrides": []
      }
    },
    {
      "type": "timeseries",
      "title": "Network Throughput",
      "gridPos": {"x": 12, "y": 12, "w": 12, "h": 8},
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "sum by(device)(rate(node_network_receive_bytes_total[5m]))",
          "legendFormat": "{{device}} rx"
        },
        {
          "expr": "sum by(device)(rate(node_network_transmit_bytes_total[5m]))",
          "legendFormat": "{{device}} tx"
        }
      ],
      "fieldConfig": {
        "defaults": {"unit": "Bps"},
        "overrides": []
      }
    }
  ],
  "templating": {"list": []}
}

